<form action="/todos/{{ todo.id }}?_method=PUT" method="POST" style="display: inline;">
  <div class="input-group">

    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" name="isDone" {{#if todo.isDone }} checked {{/if}} {{#if isDetail}}disabled{{/if}}>
      </div>
    </div>

    <input class="form-control" type="text" placeholder="name" name="name" value="{{ todo.name }}" {{#if
      isDetail}}disabled{{/if}}>
      
    <div class="input-group-append">

      {{#if isDetail}}
      <a class="btn btn-success" href="/todos/{{ todo.id }}/edit">edit</a>
      {{else}}
      <button class="btn btn-success" type="submit">save</button>
      {{/if}}

      <form action="/todos/{{ todo.id }}?_method=DELETE" method="POST">
        <button class="btn btn-danger" type="submit">delete</button>
      </form>

    </div>
  </div>
</form>



